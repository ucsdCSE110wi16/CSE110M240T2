<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBlue">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/androidpathfinal"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">


            <Space
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_column="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tools_of_geometry"
                android:layout_gravity="center"
                android:id="@+id/topic1"
                android:layout_column="1"
                android:background="@null"/>
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="100dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="15dp"
                android:layout_height="20dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/angles_and_intersecting_lines"
                android:id="@+id/topic2"
                android:background="@null"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="100dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<Space-->
                <!--android:layout_width="75dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_column="2"/>-->

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quadrilaterals"
                android:id="@+id/topic3"
                android:layout_column="2"
                android:background="@null"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="100dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circles"
                android:id="@+id/topic4"
                android:background="@null"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"/>
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="100dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp">

            <Space
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:layout_column="2"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/geometric_constructions"
                android:id="@+id/topic5"
                android:layout_column="2"
                android:background="@null"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

    </ScrollView>